{
  "name": "oladayo-enterprices",
  "version": "1.0.0",
  "description": "inventory site with Android app, admin cashier dashboard, marketing, addproduct add cashier and update product",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "webpack --mode production",
    "prettify": "prettier --write '**/*.{js,jsx,json,html,css}'"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chart.js": "^4.4.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.20.0",
    "express-rate-limit": "^5.3.0",
    "firebase": "^10.13.1",
    "helmet": "^4.4.1",
    "mongoose": "^5.12.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "react": "^18.3.1",
    "socket.io": "^4.0.1"
  },
  "devDependencies": {
    "eslint": "^7.24.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "webpack": "^5.31.2",
    "webpack-cli": "^4.6.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "rules": {}
  },
  "prettier": {
    "singleQuote": true,
    "semi": true
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "routes/",
      "models/",
      "components/",
      "db/"
    ],
    "ext": "js,json,html,css",
    "ignore": [
      "node_modules/"
    ]
  },
  "author": "Umar yakub Siyaki",
  "license": "ISC"
}
